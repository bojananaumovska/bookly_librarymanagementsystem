@model IEnumerable<Library_Managment_Project.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Reservations</h2>
<p style="
    color: #1E90FF;
    background-color: #E6F2FF;
    padding: 10px 15px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1.1em;
">
    If a physical copy of a book is currently unavailable, the librarian can place a reservation and the user will be notified when it becomes available.
</p>

@if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table id="resTable" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        <text> | </text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        <text> | </text>
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#resTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 12,
                responsive: true
            });
        });
    </script>
}
