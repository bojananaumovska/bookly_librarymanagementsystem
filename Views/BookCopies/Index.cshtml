@model IEnumerable<Library_Managment_Project.Models.BookCopy>

@{
    ViewBag.Title = "Index";
}

<h2>Book Copies</h2>
<p style="
    color: #1E90FF;
    background-color: #E6F2FF;
    padding: 10px 15px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1.1em;
">
    Each physical copy of a book that enters the library must be registered in Book Copies.
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="bookcopiesTable" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#bookcopiesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 12,
                responsive: true
            });
        });
    </script>
}